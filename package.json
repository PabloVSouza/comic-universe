{
  "name": "comic-universe",
  "version": "2.0.0-alpha.6",
  "description": "Open Source App made using Electron and React for downloading and reading comics from web sources provided by the user. This app was created for study purposes only and should never be sold or used for anything commercial",
  "main": "./out/main/index.js",
  "author": "Pablo Souza",
  "repository": "https://github.com/pablovsouza/comic-universe",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "prisma:generate": "npx prisma generate",
    "postinstall": "electron-builder install-app-deps && npx prisma generate",
    "generate-icons": "electron-icon-builder --input=./resources/icon.png --output=build --flatten",
    "build:win": "npm run prisma:generate && npm run build && electron-builder --win --config",
    "build:linux-x64": "npm run prisma:generate && electron-vite build && electron-builder --linux --config",
    "build:linux-arm": "npm run prisma:generate && electron-vite build && electron-builder --linux --arm64 --config",
    "build:mac": "npm run prisma:generate && electron-vite build && electron-builder --mac --universal --config"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^4.0.0",
    "@electron/asar": "^4.0.1",
    "@formkit/auto-animate": "^0.8.2",
    "@jridgewell/resolve-uri": "^3.1.2",
    "@prisma/client": "^6.15.0",
    "@tanstack/react-query": "^5.86.0",
    "axios": "^1.11.0",
    "classnames": "^2.3.2",
    "cors": "^2.8.5",
    "electron-updater": "^6.1.4",
    "express": "^4.21.0",
    "html-react-parser": "^5.2.6",
    "lodash.debounce": "^4.0.8",
    "pacote": "^18.0.6",
    "prisma-cli-extension": "^1.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-paginate": "^8.2.0",
    "react-reverse-portal": "^2.1.2",
    "react-router-dom": "^6.18.0",
    "react-select": "^5.10.2",
    "react-transition-group": "^4.4.5",
    "slugify": "^1.6.6",
    "tw-colors": "^3.3.1",
    "uuid": "^11.1.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron/notarize": "^3.1.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.3",
    "@types/lodash.debounce": "^4.0.8",
    "@types/node": "^24.3.1",
    "@types/pacote": "^11.1.8",
    "@types/react": "^18.2.35",
    "@types/react-dom": "18.3.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitejs/plugin-react": "^4.1.1",
    "autoprefixer": "^10.4.20",
    "electron": "^38.0.0",
    "electron-builder": "^26.0.12",
    "electron-icon-builder": "^2.0.1",
    "electron-vite": "^4.0.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "postcss": "^8.4.41",
    "prettier": "^3.6.2",
    "prisma": "^6.15.0",
    "sass-embedded": "^1.77.8",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.9.2",
    "vite": "^5.4.0",
    "vite-plugin-svgr": "^4.2.0"
  }
}
