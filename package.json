{
  "name": "comic-universe",
  "version": "2.0.1-dev.1",
  "description": "Open Source App made using Electron and React for downloading and reading comics from web sources provided by the user. This app was created for study purposes only and should never be sold or used for anything commercial",
  "main": "./out/main/index.js",
  "author": "Pablo Souza",
  "repository": "https://github.com/pablovsouza/comic-universe",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "node -e \"if (process.env.CI !== 'true') { require('child_process').execSync('electron-builder install-app-deps', {stdio: 'inherit'}) }\"",
    "rebuild": "node scripts/rebuild-native-modules.js",
    "build:win": "npm run build && electron-builder --win --config",
    "build:win-no-sign": "node scripts/build-win-no-sign.js",
    "build:linux-x64": "npm run build && electron-builder --linux --config",
    "build:linux-arm": "npm run build && electron-builder --linux --arm64 --config",
    "build:mac": "npm run build && electron-builder --mac --universal --config",
    "setup:codesigning": "./scripts/setup-codesigning.sh",
    "setup:github-secrets": "./scripts/setup-github-secrets.sh",
    "create:release": "./scripts/create-release.sh",
    "cert:check": "./scripts/renew-certificate.sh",
    "cert:setup": "./scripts/setup-consistent-cert.sh",
    "test:fallback": "node scripts/test-fallback-update.js",
    "build:win:unsigned": "CSC_LINK=\"\" npm run build:win",
    "build:mac:unsigned": "CSC_IDENTITY_AUTO_DISCOVERY=false npm run build:mac",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^4.0.0",
    "@formkit/auto-animate": "^0.9.0",
    "@tailwindcss/postcss": "^4.1.13",
    "@tanstack/react-query": "^5.55.1",
    "axios": "^1.7.4",
    "better-sqlite3": "^12.2.0",
    "classnames": "^2.3.2",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.44.5",
    "electron-updater": "^6.1.4",
    "express": "^5.1.0",
    "html-react-parser": "^5.2.3",
    "i18next": "^25.5.0",
    "i18next-browser-languagedetector": "^8.2.0",
    "lodash.debounce": "^4.0.8",
    "pacote": "^21.0.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-i18next": "^15.7.3",
    "react-paginate": "^8.2.0",
    "react-reverse-portal": "^2.1.2",
    "react-router-dom": "^7.8.2",
    "react-select": "^5.7.7",
    "react-transition-group": "^4.4.5",
    "uuid": "^12.0.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron/notarize": "^3.1.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.3",
    "@types/lodash.debounce": "^4.0.8",
    "@types/node": "^24.3.1",
    "@types/pacote": "^11.1.8",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.1",
    "@typescript-eslint/parser": "^8.0.1",
    "@vitejs/plugin-react": "^5.0.2",
    "autoprefixer": "^10.4.20",
    "drizzle-kit": "^0.31.4",
    "electron": "^38.0.0",
    "electron-builder": "^26.0.12",
    "electron-vite": "^4.0.0",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "globals": "^16.3.0",
    "postcss": "^8.4.41",
    "prettier": "^3.0.3",
    "rcedit": "^4.0.1",
    "sass-embedded": "^1.77.8",
    "sharp": "^0.34.3",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2",
    "vite": "^7.1.4",
    "vite-plugin-svgr": "^4.2.0"
  }
}
