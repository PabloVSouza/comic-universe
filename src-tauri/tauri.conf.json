{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Comic Universe",
  "version": "2.0.0",
  "identifier": "com.pablo.comic-universe",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Comic Universe",
        "width": 900,
        "height": 670,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "resizable": true,
        "maximizable": true,
        "minimizable": true,
        "closable": true,
        "decorations": false,
        "transparent": true,
        "shadow": true
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "copyright": "Copyright (c) Pablo Souza",
    "category": "Entertainment",
    "shortDescription": "Open Source Comic Reader",
    "longDescription": "Open Source App made using Tauri and React for downloading and reading comics from web sources provided by the user."
  }
}
