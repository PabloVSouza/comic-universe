{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "baseUrl": "./src",

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Path mapping */
    "paths": {
      "api": ["./api/index"],
      "api/*": ["./api/*"],
      "components/*": ["./components/*"],
      "functions/*": ["./functions/*"],
      "hooks/*": ["./hooks/*"],
      "lang": ["./lang/index"],
      "lang/*": ["./lang/*"],
      "pages": ["./pages/index"],
      "pages/*": ["./pages/*"],
      "routes": ["./routes/index"],
      "routes/*": ["./routes/*"],
      "store/*": ["./store/*"],
      "css/*": ["./css/*"],
      "assets/*": ["./assets/*"],
      "@types/*": ["./@types/*"]
    },

    /* Linting */
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
