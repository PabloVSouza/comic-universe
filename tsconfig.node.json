{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "src/electron/**/*",
    "src/database/**/*",
    "src/shared/**/*",
    "electron.vite.config.*",
    "src/@types/*.d.ts",
    "src/**/*.d.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"],
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "paths": {
      "main/*": ["./src/electron/main/*"],
      "preload/*": ["./src/electron/preload/*"],
      "repositories/*": ["./src/electron/repositories/*"],
      "scripts/*": ["./src/electron/scripts/*"],
      "electron-utils": ["./src/electron/utils/index"],
      "electron-utils/*":["./src/electron/utils/*"],
      "windows/*":["./src/electron/windows/*"],
      "database/*": ["./src/database/*"],
      "constants/*": ["./src/electron/constants/*"],
      "shared/*": ["./src/shared/*"]
    }
  }
}
