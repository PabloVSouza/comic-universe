{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "src/electron/main/*",
    "src/electron/preload/*",
    "electron.vite.config.*",
    "src/@types/*.d.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"],
    "resolveJsonModule": true,
    "paths": {
      "main/*": ["./src/electron/main/*"],
      "preload/*": ["./src/electron/preload/*"],
      "repositories/*": ["./src/electron/repositories/*"],
      "scripts/*": ["./src/electron/scripts/*"],
      "utils/*":["./src/electron/utils/*"],
      "windows/*":["./src/electron/windows/*"],
    }
  }
}
