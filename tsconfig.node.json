{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "src/electron/main/*",
    "src/electron/preload/*",
    "electron.vite.config.*",
    "src/@types/*.d.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"],
    "baseUrl": "src/eletron",
    "resolveJsonModule": true,
    "paths": {
      "lib/*": ["./lib/*"],
      "utils/*":["./utils/*"],
      "repositories/*": ["./repositories/*"],
      "main/*": ["./main/*"],
      "preload/*": ["./preload/*"],
      "events/*": ["./events/*"],
    }
  }
}
