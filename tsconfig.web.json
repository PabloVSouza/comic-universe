{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": ["src/env.d.ts", "src/**/*", "src/**/*.tsx", "src/@types/*.d.ts", "src/shared/**/*"],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": "src/renderer",
    "paths": {
      "main/*": ["../../src/electron/main/*"],
      "preload/*": ["../../src/electron/preload/*"],
      "repositories/*": ["../../src/electron/repositories/*"],
      "scripts/*": ["../../src/electron/scripts/*"],
      "database/*": ["../../src/database/*"],
      "assets": ["./assets/index"],
      "assets/*": ["./assets/*"],
      "components/*": ["./components/*"],
      "electron/*": ["./electron/*"],
      "hooks/*": ["./hooks/*"],
      "layouts/*": ["./layouts/*"],
      "windows/*": ["./windows/*"],
      "lang/*": ["./lang/*"],
      "functions/*": ["./functions/*"],
      "routes/*": ["./routes/*"],
      "css/*": ["./css/*"],
      "store/*": ["./store/*"],
      "constants/*": ["./constants/*"],
      "@types/*": ["./@types/*"],
      "shared/*": ["../shared/*"],
      "shared-utils/*": ["../utils/*"],
      "shared-utils": ["../utils/index"],
      "electron-utils": ["../../src/electron/utils/index"],
      "electron-utils/*": ["../../src/electron/utils/*"],
      "renderer-utils": ["./utils/index"],
      "renderer-utils/*": ["./utils/*"]
    }
  }
}
